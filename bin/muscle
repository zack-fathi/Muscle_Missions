#!/bin/bash

set -Eeuo pipefail

# Set PYTHONPATH to backend so Flask can find muscle
export PYTHONPATH=$(pwd)/backend
export FLASK_APP=muscle

FILE=backend/var/muscle.sqlite3
if [ -f "$FILE" ]; then
    cd backend  # Move into the backend directory before running Flask
    flask run --host 0.0.0.0 --port 8000
else
    echo "Can't find database $FILE"
    echo "Try: ./bin/muscledb create"
    exit 1
fi
